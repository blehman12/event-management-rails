/* Responsive adjustments */
@media screen and (max-width: 1000px) {
  .badge-page {
    transform: scale(0.7);
    transform-origin: top center;
    margin-bottom: 40px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Generate QR codes for all badges
  generateAllBadgeQRCodes();
});

function generateAllBadgeQRCodes() {
  const qrContainers = document.querySelectorAll('.qr-code-container');
  let processedCount = 0;
  
  qrContainers.forEach(function(container, index) {
    const canvas = container.querySelector('.qr-canvas');
    const url = container.dataset.url;
    
    if (url && canvas) {
      // Add a small delay to prevent overwhelming the browser
      setTimeout(() => {
        QRCode.toCanvas(canvas, url, {
          width: 120,
          height: 120,
          margin: 1,
          color: {
            dark: '#000000',
            light: '#ffffff'
          }
        }, function(error) {
          if (error) {
            console.error(`QR Code generation error for badge ${index}:`, error);
          } else {
            processedCount++;
            if (processedCount === qrContainers.length) {
              console.log('All badge QR codes generated successfully');
            }
          }
        });
      }, index * 50); // 50ms delay between each QR code generation
    }
  });
}

// Print optimization
window.addEventListener('beforeprint', function() {
  // Ensure all QR codes are generated before printing
  console.log('Preparing badges for printing...');
});

window.addEventListener('afterprint', function() {
  console.log('Print job completed');
});
</script>